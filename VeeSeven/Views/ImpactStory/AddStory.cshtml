@model ImactStorieModel
<h3 style="text-align: left; width: 106%; margin-top: -20px; padding: 10px; margin-left: -15px;background-color: #f6f6f6;">Add New Story</h3>
<div class="container mt-3 bg-white  my-3">
    <form asp-action="AddStory" asp-controller="ImpactStory">
        <input asp-for="Name" type="text" class="form-control w-100 " style="background-color: #f8f8f8; " placeholder="Name">
        <input asp-for="Headline" type="text" class="form-control w-100  mt-3" style="background-color: #f8f8f8;" placeholder="Heading">
        <textarea asp-for="Discription" maxlength="100" placeholder="Story" cols="100" class="form-control mt-3" rows="10"></textarea>
        <button type="submit" class="btn-dark btnall mt-4 w-100 ">
            Add Story
        </button>

    </form>

</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>

</div>