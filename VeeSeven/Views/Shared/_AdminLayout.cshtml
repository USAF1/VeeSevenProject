@using VeeSeven.Extras;
@{

    UserModel user = Context.Session.Get<UserModel>(Constants.Key);

    int pendingOrders = Ext.PendingOrders();
    int completedOrders = Ext.CompletedOrders();
    int sendOrders = Ext.SendOrders();
 }



<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://fonts.googleapis.com/css2?family=Bree+Serif&family=Pacifico&family=Patua+One&display=swap" rel="stylesheet">

    <!-- Bootstrap CSS -->

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />

    <link href="~/css/mainDashboard.css" rel="stylesheet" />
    <title>@ViewData["Title"] - SafetyVeeSeven</title>



</head>
<body>
    <!--************************HEADER**********************-->
    <header>
        <div class="container-fluid header">


            <a class="" asp-action="Index" asp-controller="Home"><img src="~/Icons/logo.png" alt="Logo" /></a>
            <a class="" href="#"><i class="fas fa-user fa-2x my-4 text-white "></i><h6>@user.Name</h6></a>
        </div>
    </header>
    <!--********************NavBar***********************************-->

    <div class="content1">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-3">
                    <ul class="nav flex-column NavBar">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" asp-action="Index" asp-controller="Admin">DashBoard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Index" asp-controller="Product">Products</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="AdminUserMan" asp-controller="User">Users</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="AdminOrders" asp-controller="ShoppingCart" tabindex="-1" aria-disabled="true">Order</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Index" asp-controller="ImpactStory"  tabindex="-1" aria-disabled="true">Impact Stories</a>
                        </li>
                    </ul>
                </div>
                <!--**********************Content************************************-->
                <div class="col-md-9" style="height: 1000px;">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="iconDiv card-body">

                                    <img src="~/Icons/box.png" class="iconImage" alt="" srcset="">
                                    <p class="mt-4">pending Orders</p>
                                    <h2>@pendingOrders</h2>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="iconDiv card-body">
                                    <img src="~/Icons/arrow.png" class="iconImage" alt="" srcset="">
                                    <p class="mt-4">Completed Orders</p>
                                    <h2>@completedOrders</h2>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="iconDiv card-body">
                                    <img src="~/Icons/forklift.png" class="iconImage" alt="" srcset="">
                                    <p class="mt-4">Send Orders</p>
                                    <h2>@sendOrders</h2>
                                </div>
                            </div>
                            @RenderBody()
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--***************************FOOTER***************************************-->
    <div class="container-fluid mt-3">
        <div class="row">
            <div class="col-md-4 p-5" style="background-color: #2e2c2c;">
                <h2 class="text-center text-white">Contact Us</h2>


                <img src="~/Icons/placeholder (1).png" class="footerIcon" style="width: 50px; height: 50px;"><p class="iconText">OFfice # 3400F Aspin commercial tower</p> <br>
                <img src="~/Icons/phone-call.png" class="mt-4 footerIcon" style="width: 50px; height: 50px;"><p class="iconText">+9714 269 5718 </p> <br>
                <img src="~/Icons/email.png" class="mt-3 footerIcon" style="width: 50px; height: 50px;"><p class="iconText mt-5">info@veeseven.com </p> <br>

            </div>

            <div class="col-md-4 link">
                <div class="p-5">
                    <h2 class="text-center ">Explore</h2>
                    <ul class="links">
                        <li class="symbol"> <a href="/aboutUs.html">  About Us</a> </li>
                        <li class="symbol"> <a href="checkout.html">  Shop</a> </li>
                        <li class="symbol"> <a href="/contactUs.html">  Contact Us</a> </li>
                        <li class="symbol"> <a href="/privacyPolicy.html">  Privacy Policy</a> </li>
                    </ul>
                </div>
            </div>

            <div class="col-md-4 link">

                <div class="p-5">
                    <h2 class="text-center ">Social</h2>
                    <ul class="links">
                        <li> <i class="fab fa-facebook fa-2x mx-4"></i> </li>
                        <li> <i class="fab  fa-twitter fa-2x  mx-4 mt-2"></i></li>

                    </ul>
                </div>

            </div>
        </div>
    </div><hr>
    <!--**********************CopyRight*****************************-->

    <div class="copyRightText">
        <p class="copyText">Copyright &copy; 2021 Vee Seven Child Protective</p>
        <p class="copyText">Powered by Vee Seven Child Protective</p>
    </div>

    <script src="~/jquery/dist/jquery.js"></script>
    <script src="~/fortawesome/fontawesome-free/js/all.min.js"></script>
    <script src="~/popper.js/umd/popper.min.js"></script>
    <script src="~/bootstrap/dist/js/bootstrap.js"></script>

    @*<script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>*@
    @RenderSection("Model", false)
</body>
</html>