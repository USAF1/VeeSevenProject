<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - SafetyVeeSeven</title>

    <link href="~/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <!--Font Awesome-->
    <link href="~/fortawesome/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <!--custom css files-->
    <link href="~/css/style.css" rel="stylesheet" />
    <link href="~/responsive/indexResponsive.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand mx-5" asp-controller="Home" asp-action="Index">
                    <img src="~/Icons/logo.png" alt="LOGO" />
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item active">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="WhoAreWe">Who We Are</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link " asp-controller="Product" asp-action="ProductsPage">Products</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " href="/contactUs.html">Contact Us</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ">
                        <li class="nav-item"><input type="text" class="searchBox mt-2 form-control" style="width: 270px; height:55px;" placeholder=" search"></li>
                        <li class="nav-item">
                            <a class="nav-link icon " href="#"><i class="fas fa-search searchIcon"></i></a>
                        </li>
                        <li class="nav-item icon">
                            <a class="nav-link " asp-action="Index" asp-controller="ShoppingCart"><i class="fas fa-shopping-basket"></i></a>
                        </li>
                        <li class="nav-item icon">
                            <a class="nav-link " asp-action="Login" asp-controller="User"><i class="fas fa-user"></i></a>
                        </li>


                    </ul>
                </div>
            </div>
        </nav> <hr class="bg-warning" style="margin-top: 0; border-bottom: 2px solid #fff000;">
    </header>


    <main>
        @RenderBody()
    </main>



    <footer>
        <div class="container-fluid mt-3">
            <div class="row">
                <div class="col-md-4 p-5" style="background-color: #2e2c2c;">
                    <h2 class="text-center text-white">Contact Us</h2>

                    <img src="~/Icons/placeholder (1).png" class="footerIcon" style="width: 50px; height: 50px;" /><p class="iconText">OFfice # 3400F Aspin commercial tower</p> <br>
                    <img src="~/Icons/phone-call.png" class="mt-4 footerIcon" style="width: 50px; height: 50px;" /> <p class="iconText">+9714 269 5718 </p> <br>
                    <img src="~/Icons/email.png" class="mt-3 footerIcon" style="width: 50px; height: 50px;" /> <p class="iconText mt-5">info@veeseven.com </p> <br>

                </div>

                <div class="col-md-4 link">
                    <div class="p-5">
                        <h2 class="text-center ">Explore</h2>
                        <ul class="links">
                            <li class="symbol"> <a asp-controller="Home" asp-action="WhoAreWe">  Who Are We</a> </li>
                            <li class="symbol"> <a asp-controller="Product" asp-action="ProductsPage">  Shop</a> </li>
                            <li class="symbol"> <a href="/contactUs.html">  Contact Us</a> </li>
                            <li class="symbol"> <a href="/privacyPolicy.html">  Privacy Policy</a> </li>
                        </ul>
                    </div>
                </div>

                <div class="col-md-4 link">

                    <div class="p-5">
                        <h2 class="text-center ">Social</h2>
                        <ul class="links">
                            <li> <i class="fab fa-facebook fa-2x mx-4"></i> </li>
                            <li> <i class="fab fa-twitter fa-2x  mx-4 mt-2"></i></li>

                        </ul>
                    </div>

                </div>
            </div>
        </div><hr>
        <!--**********************CopyRight*****************************-->

        <div class="copyRightText">
            <p class="copyText">Copyright &copy; 2021 Vee Seven Child Protective</p>
            <p class="copyText">Powered by Vee Seven Child Protective</p>
        </div>
    </footer>


    <script src="~/jquery/dist/jquery.min.js"></script>
    <script src="~/popper.js/umd/popper.min.js"></script>
    <script src="~/fortawesome/fontawesome-free/js/all.min.js"></script>
    <script src="~/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/js/main.js"></script>
    @RenderSection("myscript", false)
</body>
</html>